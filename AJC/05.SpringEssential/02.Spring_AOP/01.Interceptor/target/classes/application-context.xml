<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://www.springframework.org/schema/aop
       http://www.springframework.org/schema/aop/spring-aop-2.5.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="com.music"/>

    <bean id="myAspectInterceptor" class="com.music.aspect.MyAspectInterceptor"></bean>

    <aop:config>
        <aop:pointcut id="serviceToStringPointCut" expression="execution(* *.play(..))"/>
        <aop:aspect id="myAspect" ref="myAspectInterceptor">
            <aop:before method="interceptToString" pointcut-ref="serviceToStringPointCut"/>
            <aop:after-returning method="interceptorToStringReturning"
                                 returning="result" pointcut-ref="serviceToStringPointCut"/>
        </aop:aspect>
    </aop:config>

</beans>
